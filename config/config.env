# ----------------------------
# Flywheel‑Lite defaults
# ----------------------------

# Interview behavior
FW_INTERVIEW_ROUNDS=2

# Plan refinement loop behavior (GPT‑5.2 loop count)
FW_PLAN_ITERS=3

# Default worker mix for /startwork
FW_CC=3
FW_COD=2
FW_GMI=1

# Claude model alias (claude supports "opus" and "sonnet")
FW_CLAUDE_MODEL=opus

# Codex models
FW_CODEX_IMPL_MODEL=gpt-5.2-codex   # for implementation panes
FW_GPT_PLAN_MODEL=gpt-5.2           # for plan refinement (non-interactive codex exec)
FW_CODEX_REASONING=high             # minimal|low|medium|high|xhigh

# Gemini model
FW_GEMINI_MODEL=gemini-2.5-pro

# If set to 1, prefer safer modes (less autonomy).
FW_SAFE=0
